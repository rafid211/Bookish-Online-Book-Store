@model List<Project_ATP2.Models.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h2>Welcome to employee management</h2>

<button class="btn btn-default"><a href="/AdminAccount/AddEmployee">Create</a></button>

<table class="table">

    <th>User id</th>
    <th>Name</th>
    <th>Email</th>
    <th>Actions</th>

    @if (Model.Count() == 0)
    {
        <tr>
            <td>
                <p class="text-danger">No User to show</p>
            </td>
        </tr>
    }
    else
    {

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    <button class="btn btn-default"><a href="/AdminAccount/EmployeeDetails/@item.Id">Details</a></button>
                </td>
            </tr>
        }
    }



</table>
